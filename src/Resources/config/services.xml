<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="byscripts_form_handler.form_handler.class">Byscripts\Bundle\FormHandlerBundle\Form\Handler\AbstractFormHandler</parameter>
    </parameters>

    <services>
        <service id="byscripts_form_handler.form_handler" class="%byscripts_form_handler.form_handler.class%" abstract="true">
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false"/>
            </call>
        </service>
    </services>
</container>
